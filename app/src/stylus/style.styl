@import "http://webfonts.ru/import/montserrat.css"
@import "http://webfonts.ru/import/nunitosans.css"
@import "include/var"
@import "include/helpers"

html
  font-size 1vw

body
	font-size 2rem
	font-family: 'Montserrat'

h1
	font-size 4.5rem
	color main-color
	font-weight 700
	padding 0 .5rem
	letter-spacing .05rem

h2
	font-size: 2.7rem
	color: red
	letter-spacing: 0.225rem
	font-weight 700
	text-transform: uppercase
	line-height 3.1rem
	
h3
	font-size: 2.25rem
	color: red
	letter-spacing: 0.1rem
	font-weight 700
	padding: 1rem 0

a
	text-decoration none
	color main-color
	&:visited
		color main-color

p
	font-family: 'Nunito Sans'
	font-size 1.2rem
	font-size 1.27rem
	line-height 1.8
	color main-color
	font-weight 600
	letter-spacing .225rem
	letter-spacing 0
	line-height 1.65
	
.btn
	color #fff
	font-size: .9rem
	border 0
	border-radius 3px
	text-transform uppercase
	margin 2.2rem .4rem
	padding 1.3rem 2.6rem
	outline none
	letter-spacing: 0.15rem
	cursor pointer
	transition animation
	&__red
		background red
		&:hover
			background red-hover
	&__transparent
		background transparent
		color gray*1.3
		border 1px solid
		font-family: 'Montserrat'
		&:hover
			background: gray
			color #fff
	&__full
		width 100%

article
	position relative
	&.white
		width: 65%
		height: auto
		background: #fff
		position: absolute
		right: 0
		top: 40vh
		box-shadow 0 0 5rem 0rem gray*1.5
		padding 2rem 4rem

header
	background rgba(255,255,255, .9)
	width 100%
	position fixed
	left 0
	top 0
	z-index 11

section
	position relative

nav
	.top-nav--item 
    font-size: .73rem
    letter-spacing: .2rem

.navbar
	height 5.3rem
	width 92%
	padding 1rem
	margin 0 3.5%
	display -webkit-flex
	display -moz-flex
	display -ms-flex
	display -o-flex
	display flex
	justify-content space-between
	align-items baseline
	
.logo
	align-self center
	img
		width 11.5rem

.top-nav, .bottom-nav
	display -webkit-flex
	display -moz-flex
	display -ms-flex
	display -o-flex
	display flex
	&--item
		padding .45rem 2.2rem
		font-size: .83rem
		color: #2B364E
		letter-spacing: 0.225rem
		line-height: 2rem
		text-transform: uppercase
		cursor pointer
		transition animation
		&:nth-last-child(1)
			border 1px solid transparent
			a
				color red
			&:hover
				border-color red
		&:hover
			a
				color red
			
.wrapper
	width 80%
	margin 0 auto
	display -webkit-flex
	display -moz-flex
	display -ms-flex
	display -o-flex
	display flex
	align-items flex-end
	justify-content space-between
	&__block
		display block

.block
	min-height 115vh
	height auto

.intro
	width 40%
	margin 1.1rem .5rem

.section-1
	background url('../img/gr-sec-1.png') 0 0 repeat fixed
	padding-top 40vh
	background-size cover

.section-2
	background: url('../img/gr-sec-2.png') bottom repeat-y fixed
	background-size cover
	
.section-3, .section-8
	background: url('../img/gr-sec-3.png') bottom repeat-y fixed
	background-size cover

.section-3
	.semi
		padding-top 9rem
		padding-bottom 0
		padding-left 0
		&__right
			padding-right 3rem
	&.block
		min-height 0

.section-4
	background-color transparent
	&.block
		min-height 125rem

.section-5, .section-6, .section-7
	background main-color
	display -webkit-flex
	display -moz-flex
	display -ms-flex
	display -o-flex
	display flex
	flex-direction column
	align-items center
	justify-content center
	padding: 5rem 0
	
.section-5
	padding-top 14.5%
	padding-bottom 10rem
	h2
		letter-spacing 0.3rem
		font-size 2.6rem
	.btn
		padding 1.3rem 8.5rem
		margin-top 4.5rem
		margin-bottom 1.4rem
	.section-header__light
		text-transform none
		font-size .9rem
		letter-spacing 0.07rem

.section-6
	background #f1f2f4
	padding 12.5rem
	&.block
		min-height 0
	
.section-7
	background url('../img/gr-sec-1.png') 0 0 repeat fixed
	background-size cover
	.inner
		width 70%
		text-align center

.section-8
	height 100%
	margin-bottom 30rem
	section	
		position relative
		width 90%
	.big-img
		img
			width 85%

.section-9
	background main-color
	padding-top 20vh

.top-section
	position absolute
	top 30%
.top-train
	position relative
	top 10vh
	bottom 0
	width 80%
	margin-left 10%
	text-align center

.trains
	position relative
	&--about
		width 100%
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		justify-content space-between
		img
			width 100%
		&__left, &__right
			width 37%
			margin-top 5rem
		&__right
			img
				margin-top -15%
		&__content
			width 40%
			p
				width: 108%
				margin-left: -6%
				font-size: 1.225rem
				line-height: 1.78
				&:nth-child(1)
					font-size .9rem
					letter-spacing .1rem
			img
				width: 130%
				margin-left: -20%
				margin-top: 10%
	&--card
		center(82%)
		position absolute
		left 9%
		bottom 13%
	&--item
		&--header
			background #fff
			padding 2rem 3rem 2.5rem 2rem
			display -webkit-flex
			display -moz-flex
			display -ms-flex
			display -o-flex
			display flex
			align-items center
			.avatar
				width 23%
				border-radius 50%	
				margin-right 2rem
				flex-shrink 0
			&--about
				p
					font-size 1rem
		&--content
			padding 1.5rem 2rem 2.5rem
			background: main-color
			display -webkit-flex
			display -moz-flex
			display -ms-flex
			display -o-flex
			display flex	
			flex-wrap wrap
			img
				margin 2.5rem 25% 1rem 35%
				width 30% !important
				float none !important
			p
				color #ccc*0.8
				text-align center
				font-size .8rem
				text-align: center
				font-size: 0.8rem
				letter-spacing: 0.125rem

.img
	width 40%
	min-height 115vh
	position absolute
	background url('../img/section-1.png') right bottom no-repeat
	background-size contain
	right 6%
	top 0 
	&__trainer
		left 0
		background url('../img/section-8.png') left bottom no-repeat
		background-size contain
	

.section-header
	@extend .top-nav--item
	&__light
		color #fff
		cursor default
		margin 0
		padding 0
		padding-bottom 1.5rem
		font-weight 600
		&:hover
			color #fff
	&__dark
		color main-color
		cursor default
		margin 0
		padding 2rem 0
		&:hover
			color main-color
	&__red
		color red
		cursor default
		margin 0
		padding 2rem 0

.semi
	width 50%
	position relative
	padding 12rem 2.5rem 12rem .5rem
	&::after
		content ""
		clear both
	&__left
		float left
		img
			float left 
			width 55%
			margin-left 7rem
	&__right
		float right
		align-items baseline
		img
			float right 
			width 65%
			margin-right 3rem
			
.medium
	width 46%
	position relative
	margin 5rem 2%
	&::after
		content ""
		clear both
	&__left
		float left
		img
			float left 
			width 70%
	&__right
		float right
		img
			float right 
			width 70%
			
.top-arrow
	height 2rem
	margin 0 auto
	border-radius 50%
		
.description
	display -webkit-flex
	display -moz-flex
	display -ms-flex
	display -o-flex
	display flex
	flex-direction column
	p
		text-align center
		font-size .95rem
		font-weight 400 
		margin-top 2.5rem
		line-height 1.7
		letter-spacing .03rem
		
.testers
	width 85%
	h3
		padding .8rem 0 1.4rem
	&--card
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		margin 2rem 0 7rem
		p
			color #fff
			line-height 1.6
			font-size 1.3rem
			&.red
				color: #eb505c
				font-size: .8rem
				margin-bottom: 2rem
				letter-spacing: 0.115rem
		&--photo
			width 33.33%
			position relative
			z-index 1
			img
				width 101%
		&--description__left
			padding 3rem 3rem	0 8rem
			width 66.66%
			background: support-color
			margin 3rem 3rem -3rem -3rem
			span
				background: #eb505c
				padding: 0.6rem 1.1rem 0.6rem 0.8rem
				font-size: 0.8rem
				color: #2b364e
				text-transform: uppercase
				letter-spacing: 0.17rem
		&--description__right
			padding: 3rem 8rem 0rem 3rem
			width: 66.66%
			background: #1e2637
			margin: 3rem -3rem -3rem 3rem
			span
				background: #eb505c
				padding: 0.6rem .8rem 0.6rem 1.1rem 
				font-size: 0.8rem
				color: #2b364e
				text-transform: uppercase
				letter-spacing: 0.17rem
				float: right
			h3
				text-align right
			p
				text-align right
		&__left
			margin-left 3rem
		&__right
			margin-right 3rem
	h3
		margin-top 2rem 
		
.faq
	width 70%
	margin-top 3rem
	ul
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		justify-content center
		align-items center
		width 50%
		margin 0 auto
		li
			margin-bottom 2rem
			width 50%
			text-align center
			a
				text-transform: uppercase
				border-bottom: 0.2rem solid transparent
				color: #878788
				transition: all 0.5s ease
				padding: 2rem 0rem
				font-size: 0.8rem
				letter-spacing: 0.18rem
				&.active
					color red
					border-color red
				&:visited,
				&:focus,
				&:active
					outline none
	.accordeon 
  border-top: none
  margin: 10px 0
  float: left
  width: 100%
  position: relative
  color gray
	a 
  	display: block
  	text-decoration: none
	.answer 
	  color: #555
	  padding: 20px 10px
	  margin-bottom: 10px
	.ac
		width 90%
		margin .8rem auto
		border-radius: 4px
		font-size 1.3rem
		font-family: 'Nunito Sans'
		letter-spacing: 0.03rem
		color #2B364D
		&_head
			padding: 1.5rem 1rem
			cursor: pointer
			line-height: 1.7
	  
.feedback
	display: -webkit-flex
	display: -moz-flex
	display: -ms-flex
	display: -o-flex
	display: flex
	flex-direction: column
	width: 62%
	margin: 4rem auto
	padding: 3rem 5rem
	background: #fff
	box-shadow: -2rem 1rem 3rem -2rem #cbcbcc
	box-sizing: border-box
	border: 1px solid #f0f0f0
	input
		color gray
		padding 1rem .5rem
		margin-bottom 2rem
		border 0
		border-bottom 1px solid #cbcbcc
		outline none
		transition animation
		box-shadow 0px 0px 4px 0 #fff
		&:hover
			box-shadow 0px 0px 4px 0 #d5d5d5
	.btn
		margin 0
		border 0
		color #fff
		margin-top 2rem

::-webkit-input-placeholder
	color: gray
	transition animation
:-moz-placeholder
	color: gray
	transition animation
:-ms-input-placeholder
	color: gray
	transition animation
::-moz-placeholder
	color: gray
	transition animation
:focus::-webkit-input-placeholder 
	color: transparent
:focus::-moz-placeholder          
	color: transparent
:focus:-moz-placeholder           
	color: transparent
:focus:-ms-input-placeholder      
	color: transparent

footer
	width 80%
	margin 0 auto
	padding 10rem 0
	hr
		color gray
	.navbar
		width 100%
.copy
	text-align center
	font-size 1rem
	padding 2rem 0
	a
		padding 0 1rem
		color support-color
		font-weight 700
.bottom-nav--item
		&:nth-last-child(1)
				background: red
				transition animation
				&:hover
					background: #fff
					a
						color red
				a
					color #fff
					transition animation
.comming_soon
	color lightgray
	position relative
	font-size .8rem
	&__icon
		width 13em
		height 1rem
		border 1px solid
		position absolute
		left 2rem
		bottom -.5rem
		border-radius .65rem
		text-transform uppercase
		font-size .5rem
		text-align center
		line-height 1.5
.table
	display -webkit-flex
	display -moz-flex
	display -ms-flex
	display -o-flex
	display flex
	flex-direction column
	margin 4rem 0
	.row
		font-size 1rem
		color #fff
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		align-items center
		.col
			padding: 1.3rem
			border: 1px solid
			width: calc(100% - 6rem)
			height: 6rem
			&.ok
				width 6rem
				flex-shrink 0
				img
					border-radius: 50%
					width: 75%
					margin-top: 12.5%
					margin-left: 12.5%
			&.desc
				flex-shrink 0
				flex-grow 3
				display -webkit-flex
				display -moz-flex
				display -ms-flex
				display -o-flex
				display flex
				align-items center
.mobile
  display none

@import "include/media"